<%= link_to @root.title  , @root  %> 
<% @parents.reverse.each do |c| %>
  > <%= link_to c.title , c %> 
<% end %>
> <%= link_to @product.title , @product %> 

<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Slug:</b>
  <%= @product.slug %>
</p>

<p>
  <b>Photo:</b>
  <%=image_tag @product.photo.thumb.url %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Category:</b>
  <%= @product.category.title %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
